<body>

  <div class="container">

    <!-- Top-Header Container -->
    <div class="placeholder">

      <!-- Parallax Video Container  -->
      <div class="parallax-window" data-parallax="scroll" data-image-src="video/green-hills.mp4">


        <div class="picture">
          <img src="img/the-second-breakfast-club-the-boys.png" alt="Logo" class="site-picture" />
        </div>

        <!-- Main Header Container  -->
        <div class="header">
          <div class="row header-inner">
            <div class="col-md-6 col-12">
              <img src="img/the-second-breakfast-club-title.png" alt="Logo" class="site-logo" />
            </div>

            <!-- Navbar Container  -->
            <nav class="col-md-6 col-12 nav">
              <ul class="nav-ul">
                <li class="nav-li"><a href="index.ejs" class="nav-link active">Menu</a></li>
                <li class="nav-li"><a href="order.ejs" class="nav-link">Order</a></li>
                <li><a href="#" id="cart"><i class="fa fa-shopping-cart"></i> Cart <span class="badge-outer">0</span></a></li>
              </ul>
            </nav>
            <!-- /Navbar Container  -->

            <!-- Order Cart Container -->
            <div class="shopping-cart">
              <!-- Order Cart: Header-->
              <div class="shopping-cart-header">
                <i class="fa fa-shopping-cart cart-icon"></i><span class="badge-inner"></span>
                <div class="shopping-cart-total">
                  <span class="lighter-text">Total:</span>
                  <span class="main-color-text">$0.00</span>
                </div>
              </div>
              <!-- /Order Cart: Header-->

              <!-- Order Cart: Items-->
              <ul class="shopping-cart-items">
                <li class="clearfix">
                  <img src="../public/assets/gallery/01.jpg" alt="item1" />
                  <span class="item-name">Halibut</span>
                  <span class="item-price">$849.99</span>
                  <span class="item-quantity">Quantity: 01</span>
                </li>

                <li class="clearfix">
                  <img src="../public/assets/gallery/02.jpg" alt="item1" />
                  <span class="item-name">Fish -N- Chips</span>
                  <span class="item-price">$1,249.99</span>
                  <span class="item-quantity">Quantity: 01</span>
                </li>

                <li class="clearfix">
                  <img src="../public/assets/gallery/03.jpg" alt="item1" />
                  <span class="item-name">Fried Dragon</span>
                  <span class="item-price">$129.99</span>
                  <span class="item-quantity">Quantity: 01</span>
                </li>
              </ul>
              <!-- /Order Cart: Items-->

              <a href="#" class="button">ORDER</a>
            </div>
            <!-- /Order Cart Container -->

          </div>
        </div>
        <!-- /Main Header Container  -->
      </div>
      <!-- /Parallax Video Container  -->
    </div>
    <!-- /Top-Header Container  -->

    <!-- Main Container  -->
    <main>

      <!-- Welcome Header  -->
      <header class="row welcome-section">
        <h2 class="col-12 text-center section-title">Welcome to the Second Breakfast Club</h2>
        <p class="col-12 text-center">A place to rest in between your journey. We made our website as simple possible, so you
          can focus less on moving around and more on getting the food you want!</p>
      </header>
      <!-- /Welcome Header  -->

      <!-- Gallery Container  -->
      <div class="row gallery">

      </div>
      <!-- /Gallery Container  -->

    </main>
    <!-- /Main Container  -->

    <!-- Footer  -->
    <footer class="footer text-center">
      <p>The Second Breakfast Club&trade; | Made with ðŸ’š by:
